<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">

    <View
        android:id="@+id/view"
        android:layout_width="360dp"
        android:layout_height="650dp"
        android:background="#257CB7D1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etfullname"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:hint="Fullname"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="90dp" />

    <EditText
        android:id="@+id/etusername"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:hint="Username"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/etfullname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="158dp" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/etusername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="260dp" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/etemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="326dp" />

    <EditText
        android:id="@+id/etkonfirmasi"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:hint="Konfirmasi Password"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/etpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="394dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="306dp"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etkonfirmasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="464dp" />

    <EditText
        android:id="@+id/etNohp"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:hint="NoHp"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="532dp" />

    <EditText
        android:id="@+id/etalamat"
        android:layout_width="305dp"
        android:layout_height="43dp"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:hint="Alamat"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/etNohp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="600dp" />

    <Button
        android:id="@+id/simpan"
        android:layout_width="308dp"
        android:layout_height="41dp"
        android:layout_margin="10dp"
        android:layout_marginTop="112dp"
        android:text="Simpan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etalamat" />

</androidx.constraintlayout.widget.ConstraintLayout>
